    private void jButton1ActionPerformed(java.awt.event.ActionEvent evt) {//GEN-FIRST:event_jButton1ActionPerformed
 list1.clear();
        String v="";
String msg="peeyush";
byte[] pqr=new byte[1024];

v="255.255.255.255";
pqr=msg.getBytes();
try{
DatagramSocket as=new DatagramSocket();
DatagramPacket ps=new DatagramPacket(pqr,pqr.length,InetAddress.getByName(v),6789);
as.send(ps);
String ql=new String(ps.getData());
//System.out.print(ql);
}
catch(Exception e){System.out.print(e+v);}


    }//GEN-LAST:event_jButton1ActionPerformed

